FROM python:3.6.6-alpine3.6
COPY . /server
WORKDIR /server
RUN apk --update add g++ \
    make \
    postgresql-dev && \
    pip install -r requirements.txt
VOLUME ["/server"]
EXPOSE {{ cookiecutter.django_dev_port }}
ENTRYPOINT [ "python", "manage.py" ]
CMD [ "runserver", \
      "0.0.0.0:{{ cookiecutter.django_dev_port }}" ]
